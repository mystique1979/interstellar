<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<% @page_title = "Be A Star!!!"%>
<table>
<% @products.each do |dupa| %>
	<tr class="<%=cycle('odd', 'even')%>">
		<td><%=(dupa.image_url==nil)?image_tag('noimage.jpg', class: 'list_image'):image_tag(dupa.image_url, class: 'list_image')%></td>
		<td class="list_description">
		<dl>
			<dt><%= dupa.name %></dt>
			<dd><%= sanitize(truncate(dupa.description, length: 80)) %></dd>
		</dl>
		</td>
		<td><%=number_to_currency(dupa.price, unit: 'â‚¬')%>
			<%= button_to 'Add to Cart', line_items_path(product_id: dupa) %>
		</td>

	</tr>
<%end%>
</table>